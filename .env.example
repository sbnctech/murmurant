# Murmurant Environment Variables
# Copy this file to .env and fill in the values

# =============================================================================
# Database
# =============================================================================

# PostgreSQL connection string
DATABASE_URL=postgresql://user:password@localhost:5432/murmurant

# =============================================================================
# Authentication
# =============================================================================

# Email address that gets admin role on first login
# This user will have full admin capabilities
ADMIN_EMAIL=admin@yourclub.org

# =============================================================================
# WebAuthn/Passkey Configuration
# =============================================================================

# Relying Party ID - your domain (no protocol)
# Required in production, defaults to "localhost" in development
# PASSKEY_RP_ID=yourclub.org

# Expected origin URL (with protocol)
# Required in production, defaults to "http://localhost:3000" in development
# PASSKEY_ORIGIN=https://yourclub.org

# Display name for authenticator prompts
# PASSKEY_RP_NAME=Your Club Name

# =============================================================================
# Email Service (for magic links in production)
# =============================================================================

# Postmark API token for sending emails
# POSTMARK_API_TOKEN=your-postmark-token

# Email sender address
# EMAIL_FROM=noreply@yourclub.org

# =============================================================================
# Testing
# =============================================================================

# Admin token for E2E tests (development only)
# ADMIN_E2E_TOKEN=dev-admin-token

# Base URL for Playwright tests
# PW_BASE_URL=http://localhost:3000
